{
  "extends": ["config:base", "group:allNonMajor", ":automergeAll", ":maintainLockFilesWeekly", "schedule:weekly"],
  "rangeStrategy": "bump",
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "matchPackagePatterns": ["^eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": ["^postcss"],
      "groupName": "postcss"
    },
    {
      "matchPackagePatterns": ["^stylelint"],
      "groupName": "stylelint"
    }
  ]
}
