{% extends 'layouts/base.njk' %}

{% block content %}
  <article id="folio" class="container about__container">
    <h1 class="about__title outline">{{ title }}</h1>
    <aside class="about__subtitle introduction">
      {{ subtitle }}
      <figure class="media about__media">
        {% image thumbnail, title, 'image', 800, 800 %}
      </figure>
    </aside>
    <section class="about__body">
      {{ content | safe }}
    </section>
  </article>
{% endblock %}

