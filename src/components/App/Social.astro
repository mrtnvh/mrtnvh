---
const links = [
  {
    label: 'Github profile of Maarten Van Hoof',
    className: 'github',
    href: 'https://github.com/vanhoofmaarten/',
    icon: 'gitHub',
  },
  {
    label: 'YouTube profile of Maarten Van Hoof',
    className: 'youtube',
    href: 'https://www.youtube.com/channel/UC7kjbPgAD2QYqX3h-Cqu1nQ',
    icon: 'youtube',
  },
  {
    label: 'Mastodon profile of Maarten Van Hoof',
    className: 'mastodon',
    href: 'https://techhub.social/@mrtnvh',
    icon: 'mastodon',
  },
  {
    label: 'LinkedIn profile of Maarten Van Hoof',
    className: 'linkedin',
    href: 'https://www.linkedin.com/in/mrtnvh/',
    icon: 'linkedIn',
  },
  {
    label: 'Send an e-mail to Maarten Van Hoof',
    className: 'email',
    href: 'mailto:info@mrtnvh.com',
    icon: 'email',
  },
];
---

<nav class="social">
  {
    links.map(({ href, className, icon, label }) => (
      <a
        href={href}
        class={className}
        aria-label={label}
        target="_blank"
        rel="noopener"
        data-testid={`navigation-${className}`}
      >
        <svg>
          <use href={`#${icon}`} />
        </svg>
      </a>
    ))
  }
</nav>

<style>
  .social {
    display: flex;
    justify-content: center;
    gap: var(--space);
  }

  button.link,
  a {
    line-height: 0;
    padding: calc(var(--space) * 0.25);
  }

  svg {
    height: calc(var(--space) * 1);
    width: calc(var(--space) * 1);
  }
</style>
