---
import ListItem, { type ListItemItemProps } from './ListItem.astro';

export interface Props {
  large?: boolean;
  items: ListItemItemProps[];
}

const { large = false, items = [] } = Astro.props;
---

<div class={`grid ${large ? 'grid--large' : ''}`}>
  {items.map((item, index) => <ListItem item={item} index={index} />)}
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: clamp(calc(var(--grid-gap-y) * 1), 9vw, calc(var(--grid-gap-y) * 2)) var(--grid-gap-x);
  }
</style>
